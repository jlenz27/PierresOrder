@{
  Layout = "_Layout";
}
    @using PierreOrder.Models;

    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added!</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }

    <a href='/vendors/new'>Add a New Vendor</a>
    <p><a href='/'>Home Page</a></p>