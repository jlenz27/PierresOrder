@{
  Layout = "_Layout";
}

    <h1>Enter A New Vendor:</h1>
    <h2>Fill out the form below to create a new vendor:</h2><br>
    <form action="/vendors" method="post">
      <label for='vendorName'>Vendor Name:</label>
      <input id='vendorName' name='vendorName' type='text' required>
      <br>
      <label for='vendorDescription'>Vendor description:</label>
      <input id='venderDescription' name='venderDescription' type='text' required>
      <br>
       <label for='vendorLocation'>Vendor Location:</label>
      <input id='venderLocation' name='venderLocation' type='text' required>
      <br><br>
      <button type='submit' class="button">Submit Vendor</button>
      <br><br>

    <p><a href='/vendors'>Back To Vendor List</a></p>
    <br>
    <p><a href="/">Return to the index</a></p>